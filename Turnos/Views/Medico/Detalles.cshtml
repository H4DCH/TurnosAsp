@model Turnos.Models.Medico

@{
    ViewData["Title"] = "Details";
}

<h1 class="center">Detalles del Medico</h1>
<hr />
<div>
    <div class="row">
        <div class="col s12 m6">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title"><h5><b>@Html.DisplayFor(model => model.NombreMedico), @Html.DisplayFor(model => model.ApellidoMedico)</b></h5> </span>
                    <p>
                        @Html.DisplayNameFor(model => model.DireccionMedico) :  @Html.DisplayFor(model => model.DireccionMedico)
                        <hr />
                        @Html.DisplayNameFor(model => model.Email) : @Html.DisplayFor(model => model.Email)
                        <hr />
                        @Html.DisplayNameFor(model => model.HorarioAtencioDesde) :  @Html.DisplayFor(model => model.HorarioAtencioDesde)
                        <hr />

                        @Html.DisplayNameFor(model => model.HorarioAtencioHasta) : @Html.DisplayFor(model => model.HorarioAtencioHasta)
                    </p>
                </div>
                <div class="card-action blue-grey darken-2">
                        <input type="hidden" asp-for="IdMedico" />
                       <a asp-action="Editar" asp-route-id="@Model.IdMedico">Editar</a>
                        <a class="right" asp-action="Index">Volver</a>
                   
                </div>
            </div>
        </div>
    </div>

</div>
