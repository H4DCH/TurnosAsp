@model Turnos.Models.Especialidad

<h3>Eliminacion de Especialidad</h3>
<div>
    <div class="row">
        <div class="col s12 m6">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title"><h5><b>Descripcion de la Especialidad</b></h5> </span>
                    <p>
                        @Html.DisplayNameFor(model => model.Descripcion) :  @Html.DisplayFor(model => model.Descripcion)
                       
                    </p>
                </div>
                <div class="card-action blue-grey darken-2">
                    <form asp-action="Eliminar">
                        <input type="hidden" asp-for="Id" />
                        <input class="waves-effect waves-light btn red lighten-1" type="submit" value="Eliminar" />
                        <a class="right" asp-action="Index">Volver</a>
                    </form>
                </div>
                </div>
            </div>
        </div>
    </div>

</div>
