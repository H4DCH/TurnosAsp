@model Turnos.Models.Login
@{
    Layout = null;
}
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link type="text/css" rel="stylesheet" href="~/css/materialize.min.css" media="screen,projection" />
<script type="text/javascript" src="~/js/materialize.min.js"></script>
<div class="container">
    <h4 class="center">Inicio de Sesion</h4>
    <hr />
    <br />
        <form class="col s4" asp-action="Login">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="row">
                <div class="input-field col s4">
                    <i class="material-icons prefix">person_pin</i>
                    <input asp-for="Usuario" type="text" />
                    <label asp-for="Usuario"></label>
                    <span asp-validation-for="Usuario"></span>
                </div>
            </div>
            <div class="row">
             <div class="input-field col s4">
             <i class="material-icons prefix">vpn_key</i>
             <input asp-for="Password" type="password" />
             <label asp-for="Password"></label>
             <span asp-validation-for="Password"></span>
           </div>
        </div>
        <span class="red-text">@ViewBag.ErrorLogin</span>
        <br /><br />
                <div class="row">
                    <div class="col s6">
                        <button class="btn waves-effect waves-light cyan accent-4" type="submit" name="action">
                            <i class="material-icons right">send</i> Iniciar Sesion
                        </button>
                    </div>
                </div>
        </form>
</div>